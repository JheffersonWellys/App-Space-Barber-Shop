<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Activity_RecuperarSenha">



    <TextView
        android:id="@+id/T03_TextView_Email"
        android:layout_width="380sp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:text="@string/T03_str_PromtRedefinirSenha"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/T03_EditText_Email"
        android:inputType="text"
        android:layout_width="380sp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:autofillHints="emailAddress"
        android:text="E-mail"
        android:drawableLeft="@drawable/ic_edt_yellow"
        android:drawablePadding="10dp"
        android:background="@drawable/bg_edt_email"
        android:padding="10dp"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/T03_TextView_Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="16dp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/T03_TextView_Senha"
        android:layout_width="155dp"
        android:layout_height="23sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:text="Esqueceu sua senha?"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/T03_btn_CliqueAqui"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/T03_EditText_Email" />
    <TextView
        android:id="@+id/T03_btn_CliqueAqui"
        android:textColor="@color/Yellow"
        android:textSize="15sp"
        android:text="Clique aqui!"
        app:layout_constraintStart_toEndOf="@id/T03_TextView_Senha"
        app:layout_constraintTop_toTopOf="@id/T03_TextView_Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/T03_Btn_Enviar"

        android:layout_width="370sp"
        android:layout_height="40dp"
        android:text="Enviar"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:background="@drawable/bg_btn_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>