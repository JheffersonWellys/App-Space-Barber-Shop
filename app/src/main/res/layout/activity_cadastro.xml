<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Activity_Cadastro">

    <TextView
        android:id="@+id/edit_NovoCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Novo Cadastro"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCliente"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:text="Cliente"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/T02_swth_clienteBarbearia"
        app:layout_constraintTop_toTopOf="@+id/T02_swth_clienteBarbearia" />

    <TextView
        android:id="@+id/textViewBarbearia"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:text="Barbearia"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/T02_swth_clienteBarbearia"
        app:layout_constraintTop_toTopOf="@+id/T02_swth_clienteBarbearia" />

    <Switch
        android:id="@+id/T02_swth_clienteBarbearia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="35dp"
        android:minHeight="35dp"
        android:paddingStart="10dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:switchMinWidth="70dp"
        android:thumbTint="@color/yellow"
        android:trackTint="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_NovoCadastro" />


    <EditText
        android:id="@+id/edit_nome"
        style="@style/Conteiner"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/icn_usuario"
        android:drawablePadding="10dp"
        android:hint="Nome"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@id/T02_swth_clienteBarbearia"
        app:layout_constraintStart_toStartOf="@id/T02_swth_clienteBarbearia"
        app:layout_constraintTop_toBottomOf="@id/T02_swth_clienteBarbearia" />

    <EditText
        android:id="@+id/edit_telefone"
        style="@style/Conteiner"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/icn_telefone"
        android:drawablePadding="10dp"
        android:hint="Telefone"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@id/edit_nome"
        app:layout_constraintStart_toStartOf="@id/edit_nome"
        app:layout_constraintTop_toBottomOf="@id/edit_nome" />

    <EditText
        android:id="@+id/edit_cidade"
        style="@style/Conteiner"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/icn_cidade"
        android:drawablePadding="10dp"
        android:hint="Cidade"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@id/edit_telefone"
        app:layout_constraintStart_toStartOf="@id/edit_telefone"
        app:layout_constraintTop_toBottomOf="@id/edit_telefone" />

    <EditText
        android:id="@+id/edit_email"
        style="@style/Conteiner"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/icn_email"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@id/edit_cidade"
        app:layout_constraintStart_toStartOf="@id/edit_cidade"
        app:layout_constraintTop_toBottomOf="@id/edit_cidade" />

    <EditText
        android:id="@+id/edit_senha"
        style="@style/Conteiner"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/icn_senha"
        android:drawablePadding="10dp"
        android:hint="Senha"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@id/edit_email"
        app:layout_constraintStart_toStartOf="@id/edit_email"
        app:layout_constraintTop_toBottomOf="@id/edit_email" />

    <TextView

        android:id="@+id/ja_cadastrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Ja possui uma conta?"
        android:textColorHint="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/edit_senha"
        app:layout_constraintTop_toBottomOf="@id/edit_senha" />

    <TextView
        android:id="@+id/T02_TxtVw_cliqueAqui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:hint="Clique aqui!"
        android:textColorHint="@color/yellow"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ja_cadastrado"
        app:layout_constraintTop_toBottomOf="@+id/edit_senha" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/T02_btn_entrar"
        style="@style/Button"
        android:layout_marginBottom="20dp"
        android:text="Cadastrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

